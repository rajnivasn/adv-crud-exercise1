<!-- include header -->
<%- include('partials/header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i> All Suppliers</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Supplier</h2>
            <span class="text-light">Use the below form to Update an supplier</span>
        </div>

        <!-- add supplier form -->
         <!-- form handling -->
 <form method="POST" id="update_supplier">
    <div class="new_supplier">
        <div class="form-group">
            <label for="supplierId" class="text-light">SupplierId</label>
            <input type="number" readonly="readonly" name="supplierId" value="<%= supplier.supplierId %>">
        </div>
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="text" name="name" value="<%= supplier.name %>" placeholder=<%= supplier.name %>>
        </div>
        <div class="form-group">
            <label for="Address" class="text-light">Address</label>
            <input type="text" name="address" value="<%= supplier.address%>" placeholder=<%= supplier.address %>>
        </div>
        <div class="form-group">
            <label for="CreatedBy" class="text-light">CreatedBy</label>
            <input type="text" name="createdBy" value="<%= supplier.createdBy%>" placeholder=<%= supplier.createdBy %>>
        </div>
        <div class="form-group">
            <label for="CreatedOn" class="text-light">CreatedOn</label>
            <input type="date" name="createdOn" value="<%= supplier.createdOn%>" placeholder=<%= supplier.createdOn %>>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>

    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('partials/footer') %>
<!-- /include footer -->
